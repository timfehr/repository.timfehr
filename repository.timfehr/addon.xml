<?xml version="1.0" encoding="UTF-8"?>
    <addon id="repository.timfehr" name="Tim Fehr Repository" version="1.0.0" provider-name="Tim Fehr">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Tim Fehr Repository">
                <info compressed="false">https://raw.githubusercontent.com/timfehr/repository.timfehr/master/_repo/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/timfehr/repository.timfehr/master/_repo/addons.xml.md5</checksum>
                <datadir zip="true">https://github.com/timfehr/repository.timfehr/raw/master/_repo</datadir>
                <hashes>false</hashes> 
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Tim Fehr's addons repository</summary>
            <description lang="en">Download and install Tim Fehr's addons repository.</description>
            <platform>all</platform>
            <assets>
 			   <icon>resources/icon.png</icon>
 			   <fanart>resources/fanart.jpg</fanart>
 			   <screenshot>resources/screenshot-01.jpg</screenshot>
 			   <screenshot>resources/screenshot-02.jpg</screenshot>
 			   <screenshot>resources/screenshot-03.jpg</screenshot>
 		    </assets>
            <news>Inital release</news>
    </extension>
</addon>
